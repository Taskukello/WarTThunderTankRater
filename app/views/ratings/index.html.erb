<p id="notice"><%= notice %></p>

<h1>Listing Ratings</h1>
<div class="col-md-3">
<table class= "table">
  <thead>
    <tr>
      <th>Tank</th>
      <th>User</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= @tanks.find(rating.tank_id).name %></td>
        <td><%= @users.find(rating.user_id).name %></td>
        <td><%= rating.rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<%= link_to 'New Rating', new_rating_path, class:"btn btn-primary" %>
<%end%>
</div>