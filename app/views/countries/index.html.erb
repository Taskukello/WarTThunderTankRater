<p id="notice"><%= notice %></p>

<h1>Listing Countries</h1>
<div class = "col-md-3">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
	  <th>Number of tanks</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= link_to country.name, country %></td>
		<td><%= @tanks.where(country_id: country.id).size %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<%= link_to 'New Country', new_country_path, class:"btn btn-default"%>
<%else%>
<p>login to add new country</p>
<%end%>
</div>