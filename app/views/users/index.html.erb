<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<div class="col-md-3">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
	  <th>Number of ratings</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
		<td><%= @ratings.where(user_id: user.id).size %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>