<p id="notice"><%= notice %></p>

<h1>Listing Tanks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Country</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tanks.each do |tank| %>
      <tr>
        <td><%= tank.name %></td>
        <td><%= tank.year %></td>
        <td><%= @countries.find(tank.country_id).name %></td>
        <td><%= @types.find(tank.type_id).name %></td>
        <td><%= link_to 'Show', tank %></td>
        <td><%= link_to 'Edit', edit_tank_path(tank) %></td>
        <td><%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

