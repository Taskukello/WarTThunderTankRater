
<p id="notice"><%= notice %></p>

<h3>
  <strong>Name:</strong>
  <%= @user.name %>
</h3>

<h3> ratings by <%= @user.name %>: </h3>
<div class="row">
<div class="col-md-3">
<table class= "table">
  <thead>
    <tr>
      <th>Tank</th>
      <th>Rating</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
               <td><%= @tanks.find(rating.tank_id).name %></td>
        <td><%= rating.rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
<div class="btn-group" role="group">
<% if (current_user == @user) %>
<%= link_to 'Edit', edit_user_path(@user), class:"btn btn-default" %> 
<%end%>
<%= link_to 'Back', users_path, class:"btn btn-default" %>
</div>