<p id="notice"><%= notice %></p>

<h1>Listing Types</h1>
<div class = "col-md-3" >
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
	  <th>Number of tanks </th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= link_to type.name, type %></td>
		<td><%= @tanks.where(type_id: type.id).size %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<%= link_to 'New Type', new_type_path, class:"btn btn-default"%>
<%else%>
<p>login to add new types</p>
<%end%>
</div>
